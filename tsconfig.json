{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true
  },
  "include": ["client/**/*.ts", "server/**/*.ts", "common/**/*.ts"]
  //compiler will only compile the files/directories included here
}
